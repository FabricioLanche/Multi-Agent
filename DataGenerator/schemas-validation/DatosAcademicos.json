{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "DatosAcademicos",
    "type": "object",
    "x-dynamodb": {
        "partition_key": "usuarioId",
        "sort_key": "id"
    },
    "properties": {
        "id": {
            "type": "string",
            "pattern": "^[0-9a-fA-F\\-]{36}$"
        },
        "usuarioId": {
            "type": "string",
            "pattern": "^[0-9a-fA-F\\-]{36}$",
            "description": "Referencia a Usuario.id"
        },
        "carrera": {
            "type": "string"
        },
        "ciclo_actual": {
            "type": "integer",
            "minimum": 1
        },
        "estado_matricula": {
            "type": "string",
            "enum": [
                "MATRICULADO",
                "RETIRADO",
                "EGRESADO",
                "SUSPENDIDO",
                "INACTIVO"
            ]
        },
        "creditos_aprobados": {
            "type": "integer",
            "minimum": 0
        },
        "creditos_desaprobados": {
            "type": "integer",
            "minimum": 0
        },
        "promedio_ponderado": {
            "type": "number",
            "minimum": 0,
            "maximum": 20,
            "description": "Promedio en escala 0-20 (ajustable según sistema académico)"
        },
        "historial_retirados": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "curso": {
                        "type": "string"
                    },
                    "periodo": {
                        "type": "string"
                    }
                },
                "required": [
                    "curso",
                    "periodo"
                ],
                "additionalProperties": false
            },
            "description": "Lista de cursos y periodos en que se retiró"
        },
        "avance_malla": {
            "type": "number",
            "minimum": 0,
            "maximum": 100,
            "description": "Porcentaje de avance del plan de estudios"
        },
        "cursos_reprobados": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "asistencia_promedio": {
            "type": "number",
            "minimum": 0,
            "maximum": 100,
            "description": "Porcentaje de asistencia promedio"
        }
    },
    "required": [
        "id",
        "usuarioId",
        "carrera",
        "ciclo_actual"
    ],
    "additionalProperties": false
}